extends layout

block title
  title F1podlupą.pl

block content
  #main
    #articles
      .con-title Najnowsze wiadomości
      each val in newest
        a.article(href="/article/" + val.ID)
          img.img.cover(src='/upload/' + val.ID + '/cover.webp' alt='')
          .notImg
            .title= val.title
            .text= val.short
          
          case val.section
            when "f1"
              .type(style="background-color: red")
                .little FORMUŁA 1
            when "f2"
              .type(style="background-color: #0a00ff")
                .little FORMUŁA 2
            when "fe"
              .type(style="background-color: #00d3ff")
                .little FORMUŁA E
            when "f1basics"
              .type(style="background-color: #f09537")
                .little PODSTAWY F1
    #news
      .con-title Pozostałe wiadomości
      each val in articles
        a.square(href="/article/" + val.ID)
          img.img.cover(src='/upload/' + val.ID + '/cover.webp' alt='')
          .notImg
            .title= val.title 
            .text= val.short
            .next Czytaj dalej --> 
block scripts
  script(src='js/main_ui.js')
  
